        <!--                android:focusedByDefault="false"-->
        <!--                android:maxLines="1"-->
        <!--                android:inputType="textPassword"-->
        <!--                android:backgroundTint="@color/colorPrimaryDark"-->
        <!--                android:textColor="@color/colorPrimaryDark"/>-->

        <!--        </com.google.android.material.textfield.TextInputLayout>-->

        <Button
            android:id="@+id/BTN_loginLOGIN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/layphonenumber"
            app:layout_constraintLeft_toRightOf="@id/BTN_signupLOGIN"
            app:layout_constraintRight_toRightOf="@id/layphonenumber"
            android:background="@drawable/login_btn_bg"
            android:textColor="@color/colorPrimary"
            android:text="Login"/>

        <Button
        android:id="@+id/BTN_signupLOGIN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/layphonenumber"
        app:layout_constraintLeft_toLeftOf="@id/layphonenumber"
        app:layout_constraintRight_toLeftOf="@id/BTN_loginLOGIN"
        android:background="@drawable/login_btn_bg"
        android:textColor="@color/colorPrimary"
        android:text="Sign up"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutSignup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.25"
        android:visibility="visible">

        <TextView
            android:id="@+id/signuptextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textSize="30sp"
            android:textColor="@color/colorPrimary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layfname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/signuptextview"
            app:layout_constraintRight_toLeftOf="@id/laylname"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="40dp"
            android:layout_marginHorizontal="14dp"
            android:layout_marginBottom="14dp"
            app:hintTextColor="@color/colorPrimary"
            android:textColorHint="@color/colorPrimary">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/input_firstNameSIGNUP"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="First Name"
                android:focusedByDefault="false"
                android:maxLines="1"
                android:inputType="textPersonName"
                android:text="iman"
                android:backgroundTint="@color/colorPrimaryDark"
                android:textColor="@color/colorPrimaryDark"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/laylname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/signuptextview"
            app:layout_constraintLeft_toRightOf="@id/layfname"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="40dp"
            android:layout_marginHorizontal="14dp"
            android:layout_marginBottom="14dp"
            app:hintTextColor="@color/colorPrimary"
            android:textColorHint="@color/colorPrimary">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/input_lastNameSIGNUP"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Last Name"
                android:focusedByDefault="false"
                android:maxLines="1"
                android:inputType="textPersonName"
                android:text="langaran"
                android:backgroundTint="@color/colorPrimaryDark"
                android:textColor="@color/colorPrimaryDark"/>

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layphonenumber1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/laylname"
            android:layout_margin="14dp"
            app:hintTextColor="@color/colorPrimary"
            android:textColorHint="@color/colorPrimary">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/input_phoneNumberSIGNUP"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Phone Number"
                android:focusedByDefault="false"
                android:maxLines="1"
                android:inputType="phone"
                android:text="0123456789"
                android:backgroundTint="@color/colorPrimaryDark"
                android:textColor="@color/colorPrimaryDark"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/layphonenumber1"
            android:layout_margin="14dp"
            app:hintTextColor="@color/colorPrimary"
            android:textColorHint="@color/colorPrimary">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/input_emailSIGNUP"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Email"
                android:focusedByDefault="false"
                android:maxLines="1"
                android:inputType="textEmailAddress"
                android:text="iman@gmail.com"
                android:backgroundTint="@color/colorPrimaryDark"
                android:textColor="@color/colorPrimaryDark"/>

        </com.google.android.material.textfield.TextInputLayout>

        <!--        <com.google.android.material.textfield.TextInputLayout-->
