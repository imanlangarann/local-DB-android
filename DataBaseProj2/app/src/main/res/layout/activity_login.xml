        <!--                android:focusedByDefault="false"-->
        <!--                android:maxLines="1"-->
        <!--                android:inputType="textPassword"-->
        <!--                android:backgroundTint="@color/colorPrimaryDark"-->
        <!--                android:textColor="@color/colorPrimaryDark"/>-->

        <!--        </com.google.android.material.textfield.TextInputLayout>-->

        <Button
            android:id="@+id/BTN_loginSIGNUP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/layemail"
            app:layout_constraintLeft_toRightOf="@id/BTN_signupSIGNUP"
            app:layout_constraintRight_toRightOf="@id/layemail"
            android:background="@drawable/login_btn_bg"
            android:textColor="@color/colorPrimary"
            android:text="Login"/>

        <Button
            android:id="@+id/BTN_signupSIGNUP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/layemail"
            app:layout_constraintLeft_toLeftOf="@id/layemail"
            app:layout_constraintRight_toLeftOf="@id/BTN_loginSIGNUP"
            android:background="@drawable/login_btn_bg"
            android:textColor="@color/colorPrimary"
            android:text="Sign up"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/grayLayer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80202020"
        android:visibility="gone">
        <ProgressBar
            android:id="@+id/PB_login"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

