<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/btn_shop"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp"
    android:rotation="0">

    <ImageView
        android:id="@+id/tvshopic"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_shop"
        app:tint="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:rotation="0"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:background="@drawable/shop_ic_tv_bg"
        app:layout_constraintTop_toTopOf="@id/tvshopic"
        app:layout_constraintBottom_toBottomOf="@+id/tvshopic"
        app:layout_constraintRight_toRightOf="@id/tvshopic">


        <TextView
            android:id="@+id/shop_ic_numberOfOrdersMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="10sp"
            android:textColor="@color/colorPrimary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/shop_ic_numberOfOrdersHelp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="10sp"
            android:textColor="@color/colorPrimary"
            app:layout_constraintTop_toBottomOf="@+id/shop_ic_numberOfOrdersMain"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>